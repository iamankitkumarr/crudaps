      <main class="px-3">
        <h1 class="text-dark">Hello </h1>
        <p class="lead text-dark">Welcome to my first NodeJs App</p>
        <p class="lead">
          <a
            href="#"
            class="btn btn-lg btn-secondary fw-bold text-dark border-white bg-white"
            >Learn more</a
          >
        </p>

        <div class="card bg-glass">
            <div class="card-body px-4 py-5 px-md-5">
              <form action="/account/addaccount" method="POST">
                <!-- 2 column grid layout with text inputs for the first and last names -->
                <div class="row">
                    
                  <% if (messages.error) { %>
                  <div class="alert alert-danger">
                    <strong><%= messages.error %> </strong>
                  </div>
                  <% } %>
                  <h1 class="mb-3 h3">Register</h1>
                  <div class="col-md-12 mb-4">
                    <div class="form-outline">
                      <input
                        type="text"
                        name="name"
                        id="form3Example2"
                        class="form-control"
                      />
                      <label class="form-label" for="form3Example2"
                        >Full Name</label
                      >
                    </div>
                  </div>
                </div>

                <!-- Email input -->
                <div class="form-outline mb-4">
                  <input
                    type="email"
                    name="email"
                    id="form3Example3"
                    class="form-control"
                  />
                  <label class="form-label" for="form3Example3"
                    >Email address</label
                  >
                </div>

                <!-- Password input -->
                <div class="form-outline mb-4">
                  <input
                    type="password"
                    name="password"
                    id="form3Example4"
                    class="form-control"
                  />
                  <label class="form-label" for="form3Example4"
                    >Password</label
                  >
                </div>

                <!-- Submit button -->
                <button
                  type="submit"
                  class="btn btn-primary btn-block mb-4"
                >
                  Sign up
                </button>

                <!-- Register buttons -->
                <div class="text-center">
                  <p>Already have an account? <a href="/login">Login</a></p>
                </div>
              </form>
            </div>
          </div>






        <table>
            <% for (const userId in data) { %>
              <% const user = data[userId]; %>
              <tr>
                <td class="text-dark" ><strong class="text-dark" >User ID:</strong class="text-dark" > <%= userId %></td>
            <td class="text-dark" ><strong class="text-dark" >Username:</strong class="text-dark" > <%= user.name %></td>
            <td class="text-dark" >   <strong class="text-dark" >Email:</strong class="text-dark" > <%= user.email %></td>
        <td class="text-dark" ><strong class="text-dark" >Password:</strong class="text-dark" > <%= user.password %></td>
        <td>
            <!-- Update form for each user -->
            <form action="/account/<%= userId %>" method="POST">
              <label for="newUsername">New Username:</label>
              <input type="text" id="newUsername" name="name">
    
              <label for="newEmail">New Email:</label>
              <input type="email" id="newEmail" name="email">
    
              <label for="newPassword">New Password:</label>
              <input type="password" id="newPassword" name="password">
    
              <button type="submit">Update</button>
            </form>
            <form action="/account/delete/<%= userId %>" method="POST">
            <button type="submit">delete</button>
        </form>
              </tr>
            <% } %>
            </table>
